/* pages/yuan/yuan.wxss */
.up{
  width: 100%;
  height: 300rpx;
  background: greenyellow;
}
.ball{
  background: pink;
  width: 100%;
  height: 700rpx;
}
.circ{
  width: 700rpx;
  height: 100%;
  margin: 0 auto;
  background: black;
  position: relative;
}
.circa{
  width: 700rpx;
  height: 700rpx;
  background: red;
  border-radius: 50%;
}
.circb{
  width: 500rpx;
  height: 500rpx;
  background: blue;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.circc{
  width: 360rpx;
  height: 360rpx;
  background: greenyellow;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
}
.container{
  position: absolute;
  width:200rpx;
  height:200rpx;
  background: #fff;
  margin: 80rpx auto;
  border-radius: 50%;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  box-shadow: 0 0 40rpx 0 #ffffff;
  z-index: 99;
}
.ripple {
background-color: rgba(255, 0, 255, 1);
z-index: 1;
border-radius: 100%;
height:40rpx;
width:40rpx;
position: absolute;
-webkit-transform: scale(0);
}
@-webkit-keyframes ripple {
100% {
-webkit-transform: scale(12);
transform: scale(12);
background-color: transparent;
}
}