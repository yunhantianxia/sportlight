page{
  background: #2b2c3d;
}
.bup{
  height: 450rpx;
  width: 100%;
  background: #2b2c3d;
  position: relative;
}
.tou{
  width: 200rpx;
  height: 200rpx;
  opacity: 0.1;
  background: #fff;
  position: relative;
  top: 50rpx;
  margin: auto;
  border-radius: 50%;
}
.tit{
  height: 160rpx;
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 0;
  opacity: 0.7;
  font-family: PingFangSC;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: #ffffff;
}
.titup{
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
}
.titdo{
  height: 60rpx;
  width: 100%;
  line-height: 60rpx;
}
.option{
  width: 100%;
  background: #fff;
  height: 750rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  position: absolute;
  bottom: 0;
}
.option .prog{
  width: 100%;
  height: 48rpx;
  margin-top: 32rpx;
  opacity: 0.8;
  font-family: PingFangSC;
  font-size: 32rpx;
  font-weight: normal;
  font-style: normal;
  font-stretch: normal;
  line-height: normal;
  letter-spacing: 2.3rpx;
  color: #2c2b3d;
  background: yellow;
}
.option .prog:nth-of-type(2){
  height: 64rpx;
  margin-top: 34rpx;
}
.option .prog:nth-of-type(3){
  height: 64rpx;
  margin-top: 45rpx;
}
.option .prog:nth-of-type(4){
  height: 64rpx;
  margin-top: 45rpx;
}
.option .prog:nth-of-type(5){
  height: 64rpx;
  margin-top: 45rpx;
}
.option .prog view{
  float: left;
}
.startmate{
  font-family: PingFangSC;
  opacity: 0.9;
  letter-spacing: 3rpx;
  margin-top: 36rpx;
  width: 600rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #fe6809;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  position: absolute;
  bottom: 32rpx; 
  margin: 0 auto;
  left: 0;
  right: 0;
}
.startmate span:nth-of-type(1){
  position: absolute;
  font-size: 32rpx;
  opacity: 0.1;
  right: 82rpx;
}
.triangle{
  height: 0;
  width: 0;
  /* background-color: #fff; */
  opacity: 0.2;
  border-top: 12.7rpx solid transparent;
  border-bottom: 12.7rpx solid transparent;
  border-left: 12.7rpx solid rgb(255, 255, 255);
  position: absolute;
  right: 56.7rpx;
  top:39rpx;
}
.option .prog .line{
  height: 24rpx;
  width: 24rpx;
  display: inline-block;
  border-left: 4rpx solid #fe6809;
  margin-left: 40rpx;
  margin-top: 12rpx;
}
.option .prog .name{
  font-family: PingFangSC;
  font-size: 24rpx;
  font-weight: 500;
  line-height: 48rpx;
  letter-spacing: 2px;
  text-align: center;
  color: #2c2b3d;
}
.option .prog .exit{
  color: #fff;
  width: 48rpx;
  height: 48rpx;
  opacity: 0.1;
  background-color: #2c2b3d;
  border-radius: 50%;
  line-height: 43rpx;
  text-align: center;
  margin-right: 32rpx;
  display: inline-block;
  float: right;
}
.option .prog .num{
  width: 20rpx;
  height: 64rpx;
  opacity: 0.3;
  font-family: DIN;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 64rpx;
  letter-spacing: 2rpx;
  text-align: center;
  color: #2c2b3d;
  margin-left: 40rpx;
}
.option .prog .na{
  width: 406rpx;
  height: 45rpx;
  opacity: 0.8;
  font-family: PingFangSC;
  font-size: 32rpx;
  line-height: 64rpx;
  letter-spacing: 2.3rpx;
  color: #2c2b3d;
  text-indent: 40rpx;
}
.option .prog .ex{
  width: 64rpx;
  height: 64rpx;
  background: blueviolet;
  border-radius: 50%;
  float: right;
  margin-right: 32rpx;
}